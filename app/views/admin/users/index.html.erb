<p id="notice"><%= notice %></p>

<h1>ユーザ一覧ページ</h1>

<table>
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.user.name")%></th>
      <th><%= t("activerecord.attributes.user.email")%></th>
      <th><%= t("activerecord.attributes.user.admin")%></th>
      <th>タスク数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? 'あり' : 'なし' %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to t('common.show'), admin_user_path(user), id: 'show-user' %></td>
        <td><%= link_to t('common.edit'), edit_admin_user_path(user), id: 'edit-user' %></td>
        <td><%= link_to t('common.destroy'), admin_user_path(user), method: :delete, data: { confirm: t('common.confirm_destroy') }, id: 'destroy-user' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
