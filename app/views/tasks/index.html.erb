<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.task.title")%></th>
      <th><%= t("activerecord.attributes.task.content")%></th>
      <th><%= t("activerecord.attributes.task.created_at")%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= l task.created_at, format: :long %></td>
        <td><%= link_to t('common.show'), task, id: 'show-task' %></td>
        <td><%= link_to t('common.edit'), edit_task_path(task), id: 'edit-task' %></td>
        <td><%= link_to t('common.destroy'), task, method: :delete, data: { confirm: t('common.confirm_destroy') }, id: 'destroy-task' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tasks %>
