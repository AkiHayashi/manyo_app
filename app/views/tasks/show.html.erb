<p id="notice" class="alert alert-primary"><%= notice %></p>

<div class='container'>
  <h1><%= t('.title') %></h1>
  <p>
    <strong><%= t("activerecord.attributes.task.title")%></strong>
    <%= @task.title %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.task.content_description")%></strong>
    <%= @task.content %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.task.created_at")%></strong>
    <%= l @task.created_at, format: :long %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.task.deadline_on")%></strong>
    <%= l @task.deadline_on, format: :default %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.task.priority")%></strong>
    <%= @task.priority %>
  </p>

  <p>
    <strong><%= t("activerecord.attributes.task.status")%></strong>
    <%= @task.status%>
  </p>

  <p>
    <strong>ラベル</strong>
    <% @task.labels.each do | label |%>
      <%= label.name %>
    <% end %>
  </p>

  <%= link_to t('common.edit'), edit_task_path(@task), id: 'edit-task', class: "btn btn-info" %> |
  <%= link_to t('common.back'), tasks_path, id: 'back', class: "btn btn-info" %>
</div>
