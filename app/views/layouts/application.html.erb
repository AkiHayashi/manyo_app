<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebManyoTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <ul>
          <a class="navbar-brand">Task App</a>
        </ul>
        <ul class="navbar-nav ml-auto">
            <% if logged_in? && current_user&.admin?  %>
              <li class="nav-item"><%= link_to 'ユーザ一覧', admin_users_path, id: 'users-index' %></li>
              <li class="nav-item"><%= link_to 'ユーザを追加する', new_admin_user_path, id: 'add-user' %></li>
              <li class="nav-item"><%= link_to t('tasks.task_index'), tasks_path, id: 'tasks-index' %></li>
              <li class="nav-item"><%= link_to t('tasks.new_task'), new_task_path, id: 'new-task' %></li>
              <li class="nav-item"><%= link_to 'ラベル一覧', labels_path, id: 'labels-index' %></li>
              <li class="nav-item"><%= link_to 'ラベルを登録する', new_label_path, id: 'new-label' %></li>
              <li class="nav-item"><%= link_to 'アカウント詳細', user_path(current_user.id), id: 'my-account' %></li>
              <li class="nav-item"><%= link_to 'ログアウト', session_path(current_user.id), method: :delete, id: 'sign-out' %></li>
            <% elsif logged_in? %>
              <li class="nav-item"><%= link_to t('tasks.task_index'), tasks_path, id: 'tasks-index' %></li>
              <li class="nav-item"><%= link_to t('tasks.new_task'), new_task_path, id: 'new-task' %></li>
              <li class="nav-item"><%= link_to 'ラベル一覧', labels_path, id: 'labels-index' %></li>
              <li class="nav-item"><%= link_to 'ラベルを登録する', new_label_path, id: 'new-label' %></li>
              <li class="nav-item"><%= link_to 'アカウント詳細', user_path(current_user.id), id: 'my-account' %></li>
              <li class="nav-item"><%= link_to 'ログアウト', session_path(current_user.id), method: :delete, id: 'sign-out' %></li>
            <% else %>
              <li class="nav-item"><%= link_to 'アカウント登録', new_user_path, id: 'sign-up' %></li>
              <li class="nav-item"><%= link_to 'ログイン', new_session_path, id: 'sign-in' %></li>
            <% end %>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
